@model RoleVM;
@{
    ViewBag.Title = "Creating Roles";
}
<h5 class="text-center">Create roles below</h5>
<div class="row">
    <div class="container-fluid col-lg-4 col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" /> <br />
            <button type="submit" class="btn btn-primary" asp-action="createrole" asp-controller="admin"> Create Role</button>
            <a asp-action="listroles" asp-controller="admin" class="btn btn-secondary"> Cancel</a>
        </form>
    </div>
</div>