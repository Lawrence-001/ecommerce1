@model RegistrationVM;
@{
    ViewBag.Title = "User registration";
}
<h3 class="text-center">User registration</h3>

<div class="row">
    <div class="container-fluid col-lg-4 col-md-6 col-sm-7" style="background-color:papayawhip">
        <form method="post" asp-action="register" asp-controller="account">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div><br />
            <div>
                <button type="submit" class="btn btn-outline-success mb-2" asp-action="register" asp-controller="account">Register</button>
            </div>
            <p> Already registered? <a asp-action="login" asp-controller="account">Login here</a></p>
        </form>
    </div>

</div>