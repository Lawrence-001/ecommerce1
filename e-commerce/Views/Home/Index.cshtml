@inject SignInManager<AppUser> _signInManager
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<body id="bgimage">

</body>

<div>
    <form method="get" class="d-flex" role="search" asp-action="index">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchstring">
        <button class="btn btn-success" type="submit" asp-action="index" asp-controller="home">Search</button>
    </form><br />
</div>
<div id="nextSliderPicture" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#nextSliderPicture" data-slide-to="0" class="active"></li>
        <li data-target="#nextSliderPicture" data-slide-to="1"></li>
        <li data-target="#nextSliderPicture" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @*<div class="carousel-item active">
        <img class="d-block w-100 carouselImage" src="~/images/" alt="">
        </div>*@
        <div class="carousel-item active">
            <img class="d-block w-100 carouselImage" src="~/images/carousel/sale.jpg" alt="Sale offer">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 carouselImage" src="~/images/carousel/sale2.png" alt="Sony Tv">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 carouselImage" src="~/images/carousel/bestDeal.jpg" alt="Sale offer">
        </div>
    </div>
    <a class="carousel-control-prev" href="#nextSliderPicture" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#nextSliderPicture" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row justify-content-center">

    <div class="card-deck">
        @foreach (Product product in Model)
        {
            var uploadedPhoto = "~/images/" + (product.ImgUrl ?? "audi.jpg");
            <div class="card m-3" style="min-width: 14.8rem; max-width: 33rem;">
                <div class="card-header text-center">
                    @product.Name
                </div>
                <img src="@uploadedPhoto" style="width:40px height:30px" asp-append-version="true" class="card-img-top imageuploaded" />
                <div class="card-footer">
                    <a asp-controller="home" asp-action="details" asp-route-Id="@product.ProductId" class="btn btn-outline-primary w-50"> View</a>
                    @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <a asp-controller="home" asp-action="edit" asp-route-Id="@product.ProductId" class="btn btn-outline-success"> Edit</a>
                        <a asp-controller="home" asp-action="delete" asp-route-Id="@product.ProductId" class="btn btn-outline-danger"> Delete</a>
                    }
                    else
                    {
                        <a asp-controller="orders" asp-action="addtocart" asp-route-Id="@product.ProductId" class="btn btn-outline-primary float-right"> Add to cart</a>
                    }

                </div>
            </div>
        }
        @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {

            <div style="position:fixed; right:25px; bottom:25px">
                <a asp-controller="home" asp-action="create" class="btn btn-success">Add Product</a>
            </div>
        }

    </div>

</div>